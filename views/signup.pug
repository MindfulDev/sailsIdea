extends ./layout.pug

block content
    .container
        .main-content.row
            .col-md-4.col-md-offset-4
                h1 Signup
            .col-md-4.col-md-offset-4
                form(action='/signup', method='post')
                    .form-group
                        label Email:
                        input.form-control(type='text', name='email')
                    .form-group
                        label Password:
                        input.form-control(type='password', name='password')
                    .form-group
                        input.btn.btn-primary(type='submit', value='Submit')


